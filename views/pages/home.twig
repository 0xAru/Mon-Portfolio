			</div>
		</section>
		<section class="projects" id="projects">
			<h2>Mes<span>
					projets</span>
			</h2>
			<div class="flex flex-wrap pad">
				{% include "../layouts/_projectsView.twig" %}
			</div>
		</section>
		<section id="contact" class="contact">
			<h2>Contactez-<span>moi</span>
			</h2>
			<span class="message">{{mailMessage}}</span>
			<form action="/message" method="POST">
				<div>
					<input type="text" name="firstname" id="firstname" placeholder="Prénom">
				</div>
				<br>
				<div>

					<input type="text" name="name" id="name" placeholder="Nom">
				</div>
				<br>
				<div>
					<input type="email" name="email" id="email" placeholder="E-mail">
				</div>
				<br>
				<div>
					<textarea name="message" id="message" cols="20" rows="7" placeholder="Votre Message"></textarea>
				</div>
				<br>
				<div class=" form-group btn btn-form">
					<button type="submit" class="contact-button">Envoyer</button>
				</div>
			</form>
